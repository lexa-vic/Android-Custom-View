<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/customViewLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fan_control"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:padding="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.5"/>

    <com.kostikov.customfancontroller.DialView
            android:id="@+id/dialView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:fanOffColor="@color/gray1"
            app:fanOnColor="@color/cyan1"
            app:selectorCount="15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/customViewLable"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>